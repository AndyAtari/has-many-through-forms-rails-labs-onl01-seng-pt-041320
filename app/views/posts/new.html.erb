
<%= form_for @post do |f| %>
<p>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
</p>

  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
    <p><b><%=b.label %> 
    <%=b.check_box%></p></b>
    <%end%>


<p>
  <%= f.fields_for :categories do |categories_fields| %>
    <%= categories_fields.label "Category Name"%>
    <%= categories_fields.text_field :name %>
  <% end %>
</p>


 <%= f.submit %>
 
<% end %>
